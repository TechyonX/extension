{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "particle",
  "title": "Particle",
  "description": "Raycast extension for Particle",
  "icon": "spawn.png",
  "author": "khasbilegt",
  "owner": "techyonx",
  "categories": [
    "Applications",
    "Productivity",
    "Media",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "spawn",
      "title": "Spawn",
      "description": "Spawn or create new particles with your selected texts or files",
      "mode": "no-view",
      "icon": "spawn.png"
    },
    {
      "name": "observe",
      "title": "Observe",
      "description": "You can list all the particles, filter by their types and execute certain actions",
      "mode": "view",
      "icon": "observe.png"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.2",
    "@supabase/supabase-js": "^2.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
